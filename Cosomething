  <script>
    const courseSelect = document.getElementById("courseSelect");
    const descriptionBox = document.getElementById("descriptionBox");
    const footer = document.getElementById("footer");
    const basicImages = document.getElementById("basicImages");
    const advancedImages = document.getElementById("advancedImages");

    const descriptions = {
      basic: `<h2>Basic Course</h2>
      <ul>
        <li><strong>Origami Puppy/Cat Face:</strong> Simple corner folds form ears and a face, with creative drawing added.</li>
        <li><strong>Origami Fortune Teller:</strong> A fun interactive model used for labeling and playing.</li>
        <li><strong>Origami Jumping Frog:</strong> A slightly more involved action model that can jump.</li>
        <li><strong>Traditional Origami Boat:</strong> A foundational model that can float on water.</li>
        <li><strong>Simple House:</strong> A quick model that encourages imaginative play and expansion.</li>
      </ul>
      <h3>Key Geometry Subjects Taught</h3>
      <ul>
        <li><strong>Puppy/Cat Face:</strong> Basic angles and vertices — folding corners to create new shapes teaches angle recognition and understanding of vertices.</li>
        <li><strong>Fortune Teller:</strong> Area and perimeter — folding corners toward the center forms smaller congruent triangles/squares and shows how area/perimeter change with each fold.</li>
        <li><strong>Jumping Frog:</strong> Spatial reasoning and proportionality — visualizing how sections form the frog improves spatial awareness and proportional sizing.</li>
        <li><strong>Traditional Boat:</strong> Congruent shapes and stability — converting rectangle → triangle → square reinforces congruent shapes and structural stability.</li>
        <li><strong>Simple House:</strong> Parallel and perpendicular lines — the walls form parallels, and roof/wall intersections form perpendiculars.</li>
      </ul>`,

      advanced: `<h2>Advanced Course</h2>
      <ol>
        <li><strong>Modular Origami Sonobe Unit</strong><br>
          <ul>
            <li>Symmetry & congruence in 3D space.</li>
            <li>Structural stability using interlocking tension.</li>
          </ul>
        </li>

        <li><strong>Traditional/Action Models (Flapping Bird, Ninja Star)</strong><br>
          <ul>
            <li>Crease patterns & logical sequences.</li>
            <li>Kinematics & movement through joint-like folds.</li>
            <li>Proportions and angle precision.</li>
          </ul>
        </li>

        <li><strong>Infinity Loop (1-Piece, Star)</strong><br>
          <ul>
            <li>Rotational symmetry & transformation.</li>
            <li>Flexagons & rigid foldability.</li>
            <li>Angles, vertices & Maekawa's theorem.</li>
            <li>2D-to-3D structural transformation.</li>
            <li>Algorithmic sequencing.</li>
          </ul>
        </li>
      </ol>`
    };

    courseSelect.addEventListener("change", () => {
      const selected = courseSelect.value;
      descriptionBox.innerHTML = descriptions[selected] || "Please select a course to view its description.";
      footer.style.display = selected ? "none" : "block";
      basicImages.style.display = selected === 'basic' ? 'block' : 'none';
      advancedImages.style.display = selected === 'advanced' ? 'block' : 'none';
    });
  </script>

